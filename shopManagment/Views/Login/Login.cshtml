
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>

    
    <div class="container col-md-4 col-md-offset-4">

        <form class="form-signin"  action="@Url.Action("LoginCheek", "Login")">
            <h2 class="form-signin-heading">Please sign in</h2>
            <label for="inputEmail" class="sr-only">Email address</label>
            <input type="text" class="form-control" placeholder="Username" required="" autofocus="" name="UsernameTextbox">
            <label for="inputPassword" class="sr-only">Password</label>
            <input type="password" id="inputPassword" class="form-control" placeholder="Password" required="" name="PasswordTextbox">
            @if (ViewData["isWrong"] =="true"){
                <div class="alert alert-danger">
                Wrong Username or Password Combination 
                </div>
            }
             
   
            <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
        </form>
    </div>
   


</body>
</html>
